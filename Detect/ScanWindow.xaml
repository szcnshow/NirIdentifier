<Window x:Class="NirIdentifier.Detect.ScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="扫描分析" Height="150" Width="400" Loaded="Window_Loaded" Closing="Window_Closing" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="txtTitle" Text="正在扫描光谱，请稍候......" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="18"/>
        <ProgressBar Name="progressScan" Grid.Row="1" Margin="10" Height="25"/>
    </Grid>
</Window>
