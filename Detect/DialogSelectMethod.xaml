<Window x:Class="NirIdentifier.Detect.DialogSelectMethod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:result="clr-namespace:NirIdentifier.Detect"
        xmlns:btn="clr-namespace:Ai.Hong.CommonLibrary.Controls;assembly=CommonLibrary"
        Title="选择检测方法" Height="450" Width="500" WindowStartupLocation="CenterOwner">
    <Grid TextBlock.FontSize="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="15,5,0,0">
            <TextBlock Text="样品规格：" VerticalAlignment="Center"/>
            <TextBox Name="txtTotalValue" Width="50" Text="100"/>
            <TextBlock Text="ml:" VerticalAlignment="Center"/>
            <TextBox Name="txtAPIValue" Width="40" Text="10"/>
            <TextBlock Text="mg" VerticalAlignment="Center"/>
        </StackPanel>
        <btn:OkCancelPanel Grid.Row="2" Margin="10" OKClicked="btnOK_Click" CancelClicked="btnCancel_Click" />
    </Grid>
</Window>
